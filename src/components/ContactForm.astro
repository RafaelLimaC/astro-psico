<style lang="scss">
  section {
    max-width: 76.25rem; //1220px
    width: 100%;

    margin: 0 auto;
    padding: 4.75rem 1rem 6rem;
  }

  .contact {
    display: flex;
    gap: 3.75rem;
    flex-direction: column;

    &-form {
      h5 {
        font-size: 1.3rem;
        letter-spacing: 0.1em;
        color: var(--accent-orange);
        line-height: 1.75;
      }

      h2 {
        font-size: 2.375rem;
        line-height: 1.3;
        font-family: var(--ff-roboto-slab);
        font-weight: 700;
        color: var(--color-blue);
        margin-bottom: 1.5rem;
      }

      form {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;

        div {
          display: flex;
          flex-direction: column;
          gap: 1.25rem;
        }

        input,
        textarea {
          width: 100%;
          border-radius: 0.625rem;
          padding: 1rem 1.25rem;
          border: none;
          background-color: #efefef;
          font-size: 1rem;
          color: var(--accent-blue);
          font-family: var(--ff-roboto);

          &::placeholder {
            color: #7e7b7b;
            font-family: var(--ff-roboto);
          }

          &:focus {
            outline: none;
            box-shadow: 0px 0px 0px 2px var(--accent-blue);
          }
        }

        input[type="submit"] {
          font-size: 1rem;
          background-color: var(--accent-orange);
          color: white;
          cursor: pointer;
          border-radius: 999px;
        }
      }
    }

    &-info {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
      min-width: 275px;
      padding: 2.5rem;
      background-color: var(--accent-orange);
      border-radius: 1.25rem;
      color: white;

      h5 {
        font-size: 1.875rem;
        font-family: var(--ff-roboto-slab);
        font-weight: 500;
      }

      .contact-info__whatsapp--wrapper {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
      }

      &__whatsapp {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        &__content {
          display: flex;
          gap: 1rem;
          align-items: center;

          img {
            width: 52px;
          }

          &--info {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;

            span:first-child {
              font-size: 0.875rem;
              line-height: 1.2;
            }

            span:nth-child(2) {
              font-size: 1rem;
              font-weight: bold;
              line-height: 1.2;
            }
          }
        }
      }

      &__address {
        display: flex;
        gap: 0.75rem;
        align-items: center;

        img {
          height: 20px;
        }

        &--info {
          display: flex;
          flex-direction: column;
          gap: 0.25rem;

          span:first-child {
            font-size: 1rem;
            line-height: 1.2;
            font-weight: bold;
          }

          span:nth-child(2) {
            font-size: 0.875rem;
            line-height: 1.4;
          }
        }
      }

      &__social {
        display: flex;
        gap: 1em;

        a {
          img {
            width: 38px;
          }
        }
      }
    }
  }

  @media screen and (min-width: 800px) {
    section {
      padding: 8rem 1rem;
    }

    .contact {
      gap: 2rem;
      flex-direction: row;
      justify-content: space-between;

      &-form {
        max-width: 618px;

        h2 {
          font-size: 2.625rem;
        }

        form {
          div {
            flex-direction: row;
            gap: 1rem;
          }

          input[type="submit"] {
            width: fit-content;
            margin-top: 1rem;
          }
        }
      }

      &-info {
        max-width: 500px;
      }
    }
  }

  @media screen and (min-width: 1200px) {
    .contact {
      &-info {
        .contact-info__whatsapp--wrapper {
          flex-direction: row;
          justify-content: space-between;
          gap: 1.25rem;

          padding-bottom: 1.5rem;
        }
      }
    }
  }
</style>

<script>
  const inputTelefone = document.getElementById("telefone") as HTMLInputElement;

  inputTelefone.addEventListener("keydown", (e) => {
    const formattedPhone = formatCell((e.target as HTMLInputElement).value);
    inputTelefone.value = formattedPhone;
  });

  const formatCell = (value) => {
    let inputValue = value.replace(/\D/g, "");

    if (inputValue.length > 2) {
      inputValue = `(${inputValue.slice(0, 2)}) ${inputValue.slice(2)}`;
    }

    if (inputValue.length > 10) {
      inputValue = `${inputValue.slice(0, 10)}-${inputValue.slice(10)}`;
    }

    if (inputValue.length > 15) {
      inputValue = inputValue.slice(0, 15);
    }

    return inputValue;
  };
</script>
