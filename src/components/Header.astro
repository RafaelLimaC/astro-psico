      </ul>
    </nav>
    <button class="header-menu__button" id="btnMenuMobile">
      <img
        class="header-menu__icon"
        src="/icons/menu.svg"
        alt="Samantha Dutra Logo"
      />
    </button>
  </div>
</header>

<style lang="scss">
  header {
    padding: 1rem;

    div {
      display: flex;
      justify-content: space-between;
    }
  }

  .header-logo {
    width: 45px;
  }

  .header-nav {
    display: none;

    .header-nav__ul {
      display: flex;
      gap: 2.34vw;
    }
  }

  .header-menu__button {
    border: none;
    background: none;
    padding: 0.5rem;
    cursor: pointer;

    .header-menu__icon {
      width: 35px;
      filter: invert(25%) sepia(34%) saturate(822%) hue-rotate(207deg)
        brightness(92%) contrast(92%);
    }
  }

  @media screen and (min-width: 800px) {
    .header-nav {
      display: block;
    }
  }
</style>
