<section id="contato">
  <div class="contact">
    <div class="contact-form">
      <h5>CONTATO</h5>
      <h2>Quer marcar uma consulta? Entre em contato comigo</h2>
      <form action="https://formspree.io/f/xyzggqyo" method="POST">
        <div>
          <input
            type="text"
            name="Nome"
            placeholder="Seu nome"
            minlength="3"
            required
          />
          <input type="email" name="Email" placeholder="Email" required />
        </div>
        <div>
          <input
            type="text"
            name="Assunto"
            placeholder="Assunto"
            minlength="3"
          />
          <input
            type="tel"
            name="Telefone"
            placeholder="Telefone"
            minlength="14"
            maxlength="15"
            id="telefone"
          />
        </div>
        <textarea
          name="Mensagem"
          placeholder="Sua mensagem..."
          rows="5"
          minlength="3"
          maxlength="255"
          required></textarea>
        <input class="submit" type="submit" value="Enviar mensagem" />
      </form>
    </div>
    <div class="contact-info">
