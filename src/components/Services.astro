<style lang="scss">
  section {
    max-width: 76.25rem; //1220px
    width: 100%;

    margin: 0 auto;
    padding: 1rem;

    .services {
      background: var(--background-gradient);
      box-shadow: 5px 5px 30px #f4752152;
      border-radius: 1.25rem;

      padding: 3rem 1.5rem;

      display: flex;
      gap: 2.5rem;
      flex-direction: column;

      &-info {
        display: flex;
        gap: 0.75rem;
        flex-direction: column;
        max-width: 310px;
        width: 100%;

        h2 {
          font-size: 1.3rem;
          text-transform: uppercase;
          color: var(--accent-orange);
          letter-spacing: 0.2rem;
          font-weight: 500;
        }

        h3 {
          font-size: 2.125rem;
          color: var(--color-blue);
          font-family: var(--ff-roboto-slab);
          font-weight: bold;
          line-height: 1.25;
          padding-bottom: 0.75rem;
        }

        p {
          color: var(--color-dark);
          line-height: 1.75;
          padding-bottom: 1rem;
        }

        &__button__img {
          width: 20px;
          margin-right: 0.5rem;
        }
      }

      &-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;

        li {
          h4 {
            font-size: 1.5rem;
            font-family: var(--ff-roboto-slab);
            font-weight: bold;

            color: var(--color-blue);
            padding-bottom: 0.75rem;
            display: flex;
            align-items: center;

            &::before {
              content: url(/li-img-2.svg);
              margin-right: 0.75rem;
            }
          }

          p {
            color: var(--color-dark);
            line-height: 1.75;
            margin-left: 2.3rem;
          }
        }
      }
    }
  }

  @media screen and (min-width: 800px) {
    section {
      .services {
        flex-direction: row;
        gap: 1rem;

        &-list {
          display: grid;
          grid-template: 1fr 1fr 1fr / 1fr 1fr;

          li {
            max-width: 370px;
          }
        }

        &-info {
          h3 {
            font-size: 2.5rem;
          }
        }
      }
    }
  }

  @media screen and (min-width: 1000px) {
    section {
      .services {
        gap: 5rem;
        padding: 2.5rem;
      }
    }
  }
</style>
